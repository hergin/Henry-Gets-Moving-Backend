{
    "name": "HenryGetsMoving",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "node ace serve --watch",
        "build": "node ace build --production",
        "start": "node server.js",
        "lint": "eslint . --ext=.ts",
        "format": "prettier --write .",
        "coverage": "nyc node ace test"
    },
    "eslintConfig": {
        "extends": [
            "plugin:adonis/typescriptApp",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error"
            ]
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "prettier": {
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true,
        "useTabs": false,
        "quoteProps": "consistent",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 100
    },
    "devDependencies": {
        "@adonisjs/assembler": "^5.9.3",
        "@japa/preset-adonis": "^1.2.0",
        "@japa/runner": "^2.2.2",
        "adonis-preset-ts": "^2.1.0",
        "eslint": "^8.25.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-adonis": "^2.1.1",
        "eslint-plugin-prettier": "^4.2.1",
        "pino-pretty": "^9.1.1",
        "prettier": "^2.7.1",
        "typescript": "~4.6",
        "youch": "^3.2.2",
        "youch-terminal": "^2.1.5"
    },
    "dependencies": {
        "@adonisjs/auth": "^8.2.3",
        "@adonisjs/bouncer": "^2.3.0",
        "@adonisjs/core": "^5.8.8",
        "@adonisjs/lucid": "^18.2.0",
        "@adonisjs/repl": "^3.1.11",
        "fs": "^0.0.1-security",
        "https": "^1.0.0",
        "luxon": "^3.0.4",
        "mysql2": "^2.3.3",
        "nyc": "^15.1.0",
        "path": "^0.12.7",
        "phc-argon2": "^1.1.3",
        "proxy-addr": "^2.0.7",
        "reflect-metadata": "^0.1.13",
        "source-map-support": "^0.5.21"
    }
}
